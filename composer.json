{
    "name": "massrimcp/php-sdk",
    "description": "PHP SDK",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Massrimcp\\OpenAiClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Massrimcp\\OpenAiClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "stan": "vendor/bin/phpstan analyse src tests",
        "fix": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "authors": [
        {
            "name": "Mohammed Almassri",
            "email": "mohammed@massri.co"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "friendsofphp/php-cs-fixer": "^3.93",
        "phpstan/phpstan": "^2.1"
    },
    "require": {
        "guzzlehttp/guzzle": "^7.10"
    }
}
